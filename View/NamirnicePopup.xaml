<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui" 
            x:Class="Friziderko.View.NamirnicePopup">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Entry Placeholder="Unesite Naziv Namirnice" x:Name="Nazivcina" TextChanged="Nazivcina_PromenaTeksta"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Entry Placeholder="Unesite Opis Namirnice" x:Name="Opiscina" TextChanged="Opiscina_PromenaTeksta"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Entry Placeholder="Unesite Kolicinu Namirnice" x:Name="Kolicincina" TextChanged="Kolicincina_PromenaTeksta" Keyboard="Numeric"/>
        </HorizontalStackLayout>

        <Button Text="Dodaj" Clicked="DodajNamirnicu"/>
        
    </VerticalStackLayout>
</mct:Popup>