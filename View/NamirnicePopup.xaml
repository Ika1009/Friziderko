<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
            xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui" 
            x:Class="Friziderko.View.NamirnicePopup"
            CanBeDismissedByTappingOutsideOfPopup="False">
    <VerticalStackLayout Padding="10">
        <HorizontalStackLayout>
            <ImageButton Source="help_icon.png" Aspect="AspectFill" WidthRequest="125" HeightRequest="125" Clicked="DodajSliku" x:Name="Slika"/>
            
            <VerticalStackLayout>
                <Entry Placeholder="Unesite Naziv Namirnice" x:Name="NazivEntry"/>
                <Entry Placeholder="Unesite Opis Namirnice" x:Name="OpisEntry"/>
                <Entry Placeholder="Unesite Kolicinu Namirnice" x:Name="KolicinaEntry" Keyboard="Numeric"/>
             </VerticalStackLayout>
            
        </HorizontalStackLayout>

        <Button Text="Dodaj" WidthRequest="100" Clicked="DodajNamirnicu"/>

        <Button Text="Izadji" WidthRequest="100" Clicked="Izadji"/>

        <!--<Image x:Name="Slika"/>-->

    </VerticalStackLayout>
</mct:Popup>