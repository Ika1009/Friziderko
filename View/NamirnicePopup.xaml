            <VerticalStackLayout Margin="15,0,0,0" VerticalOptions="Center">
                <Editor Placeholder="Naziv namirnice"
                        AutoSize="TextChanges"
                        x:Name="NazivEntry"
                        PlaceholderColor="#9a96b5"
                        TextColor="White"
                        FontSize="16"
                        MaxLength="30"
                        WidthRequest="140"
                        VerticalTextAlignment="Center"
                        Margin="0,0,0,5"
                        MaximumHeightRequest="70"/>

                <Entry Placeholder="Kolicina namirnice"
                   x:Name="KolicinaEntry"
                   Keyboard="Numeric"
                   PlaceholderColor="#9a96b5"
                   TextColor="White"
                   FontSize="16"
                   MaxLength="6"
                   WidthRequest="140"
                   VerticalTextAlignment="Center"
                   Margin="0,5,0,0"/>
            </VerticalStackLayout>

        </HorizontalStackLayout>

        <VerticalStackLayout Margin="0,15,0,15" Padding="15,0,15,0" BackgroundColor="#45405c">
            <Editor Placeholder="Opis namirnice"
                    AutoSize="TextChanges"
                    x:Name="OpisEntry"
                    PlaceholderColor="#9a96b5"
                    TextColor="White"
                    FontSize="16"
                    VerticalTextAlignment="Start"
                    HorizontalTextAlignment="Start"
                    HeightRequest="200"
                    MaxLength="300"/>
        </VerticalStackLayout>


        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Dodaj"
                    x:Name="Dugme"
                    FontSize="18"
                    BackgroundColor="#645d87"
                    WidthRequest="100"
                    Margin="0,0,15,0"
                    Clicked="DodajNamirnicu"/>

            <Button Text="Edit"
                    x:Name="EditDugme"
                    FontSize="18"
                    BackgroundColor="#645d87"
                    WidthRequest="100"
                    Margin="0,0,15,0"
                    Clicked="EditMode"
                    IsVisible="false"/>

            <Button Text="IzaÄ‘i"
