<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui" 
            x:Class="Friziderko.View.DodajNamirnicePopup">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Entry Placeholder="Napisite Naziv Namirnice" x:Name="Nazivcina"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Entry Placeholder="Napisite Opis Namirnice" x:Name="Opiscina"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Entry x:Name="Kolicincina"/>
        </HorizontalStackLayout>
        
        <Button Text="Dodaj"
                Clicked="DodajElement"/>
    </VerticalStackLayout>
</mct:Popup>